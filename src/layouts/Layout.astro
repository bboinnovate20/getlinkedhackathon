---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--primary-color: linear-gradient(-90deg, #903AFF, #FE34B9);
		--sec-color-one: #150E28;
		--sec-color-two: #903AFF;
		--sec-color-three: #D434FE;
		--sec-color-four: #FE34B9;
		
	}

	* {
		box-sizing: border-box;
	}

	@font-face {
		font-family: 'ClashDisplay';
		src: url('/font/clash-display.woff') format('woff');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}
	@font-face {
		font-family: 'Montserrat-SemiBold';
		src: url('/font/Montserrat-SemiBold.woff') format('woff');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}
	@font-face {
		font-family: 'Montserrat-Regular';
		src: url('/font/Montserrat-Light.woff') format('woff');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: 'UnicaOne';
		src: url('/font/UnicaOne-Regular.woff') format('woff');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: 'ClashDisplayLight';
		src: url('/font/ClashDisplay-Light.woff') format('woff');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: 'ClashDisplayRegular';
		src: url('/font/ClashDisplay-Regular.woff') format('woff');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}
	@font-face {
		font-family: 'ClashDisplayMedium';
		src: url('/font/ClashDisplay-Regular.woff') format('woff');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}
	@font-face {
		font-family: 'ClashDisplayBold';
		src: url('/font/ClashDisplay-Bold.woff') format('woff');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}
	@font-face {
		font-family: 'ClashDisplaySemiBold';
		src: url('/font/ClashDisplay-Semibold.woff') format('woff');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	html {
		font-family: 'ClashDisplayRegular';
		background: var(--sec-color-one);
		background-size: 224px;
	}
	body {
		margin: 0;
		overflow-x: hidden;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	.font-m-bold {
		font-family: 'Montserrat-SemiBold';
		line-height: normal;
	}


	li,
	.sec-10 p,
	.font-m-reg,
	p  {
		font-family: 'Montserrat-Regular';
		/* font-size: medium; */
	}
	
	.container {
		width: calc(100% - 5rem);
		margin: 0 auto;
		margin-top: 1rem;
		line-height: 2rem;
	}
	.flex {
		display: flex;
	}
	p {
		font-family: 'ClashDisplayLight';
	}
</style>
