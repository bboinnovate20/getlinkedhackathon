
---
interface Props {
    action: string;
    name: string;
    style?: string;
    astyle?: string;
    type?: "button" | "submit";
}

const {action, name, style, astyle, type="button"} = Astro.props
---

{
    type== "button" ?
<button id="action-btn" style={style} type={type}>
    
    <a href={action} style={astyle}>
        {name}
    </a>
</button>
:

<button id="action-btn" class="submit-btn" style={style} type={type} value={name}>
    {name}
</button>

}
<style>
    #action-btn {
        border: none;
        background-color: transparent;
        cursor: pointer;
    }
    .submit-btn,
    #action-btn a {
        /* box-shadow: 1px 2px 20px #fff; */
        
        color: #fff;
        text-decoration: none;
        font-size: 1.2rem;
        padding-block: 1.2rem;
        padding-inline: 3.5rem;
        border-radius: .5rem;
        font-family: 'ClashDisplayLight';
        display: block;
        background: var(--primary-color);
        transition: all .3s ease;
        /* background-size: 200% 200%; */
        /* background-position: 200% 400%; */
    }

    #action-btn a:hover {
        background-size: 150% 200%;
        transform: scale(1.05);
        filter: drop-shadow(0 0 0.65rem var(--sec-color-two));
    }

</style>

